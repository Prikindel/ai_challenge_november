memory:
  # Тип хранилища: "sqlite" или "json"
  storageType: "sqlite"
  
  # Настройки для SQLite
  sqlite:
    # Путь к файлу базы данных (относительно корня проекта)
    databasePath: "data/memory.db"
    # Опционально: настройки подключения
    # connectionTimeout: 5000
    # journalMode: "WAL"  # Write-Ahead Logging для лучшей производительности
  
  # Настройки для JSON
  json:
    # Путь к JSON файлу (относительно корня проекта)
    filePath: "data/memory.json"
    # Форматирование JSON (true = читаемый формат с отступами)
    prettyPrint: true
  
  # Ограничения (null = без ограничений)
  limits:
    # Максимальное количество записей в памяти
    maxEntries: null
    # Максимальный возраст записей в днях (старые записи будут удаляться)
    maxHistoryDays: null
    # Автоматическая очистка при превышении лимитов (true/false)
    autoCleanup: false

  # Суммаризация диалога
  summarization:
    enabled: true
    # Каждые N пользовательских сообщений делать сводку
    userMessagesPerSummary: 10
    # Размер сегмента в пользовательских сообщениях
    userMessagesPerSegment: 100
    # Переопределение параметров модели (опционально)
    model: null
    temperature: 0.2
    maxTokens: 900
